<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ca.ualberta.cs.volivare"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="17"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".MakeClaimActivity"
            android:label="@string/title_activity_make_claim" >
        </activity>
        <activity
            android:name=".MakeExpensesActivity"
            android:label="@string/title_activity_make_expenses" >
        </activity>
        <activity
            android:name=".ExpenseInfoActivity"
            android:label="@string/title_activity_expense_info" >
        </activity>
    </application>

</manifest>
