<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/AddExpensesButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:onClick="addExpenses"
        android:text="Add Expenses" />

    <TextView
        android:id="@+id/StartDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="  Start Date:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <TextView
        android:id="@+id/DescriptionClaim"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddExpensesButton"
        android:layout_alignParentLeft="true"
        android:text="Description:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

    <DatePicker
        android:id="@+id/endDatePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/DescriptionClaim"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/EndDateText"
        android:layout_marginTop="18dp" />

    <DatePicker
        android:id="@+id/startDatePick"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/EndDateText"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true" />

    <EditText
        android:id="@+id/DescriptionText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/AddExpensesButton"
        android:layout_alignParentRight="true"
        android:layout_toRightOf="@+id/DescriptionClaim"
        android:ems="10" >

        <requestFocus />
    </EditText>

    <TextView
        android:id="@+id/EndDateText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/DescriptionText"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="161dp"
        android:text="    End Date:"
        android:textAppearance="?android:attr/textAppearanceLarge" />

</RelativeLayout>
